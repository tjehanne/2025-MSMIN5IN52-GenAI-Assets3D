xatlas  # Pour le UV mapping
PyMCubes  # Alternative à torchmcubes (pas de compilation CUDA)
omegaconf  # Configuration pour TripoSR
einops  # Operations tensorielles
imageio[ffmpeg]  # Pour les vidéos de rendu
moderngl  # Pour le rendu OpenGL